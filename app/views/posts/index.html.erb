<div class="container">
  <div class="row">
    <div class="col-xs-12">
      

      <div class="login-btn">
        <% if current_user %>
          <div class="btn-group">
            <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <% if current_user.name? %>
                <%= current_user.name.capitalize %> <span class="caret"></span>
              <% else %>
                <%= current_user.email.split("@").first.capitalize %> <span class="caret"></span>
              <% end %>
            </button>
            
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", edit_user_path(current_user) %></li>
              <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
            </ul>
          </div>
        <% else %>
          <button type="button" class="btn btn-success text-white">
            <%= link_to "Log In", new_user_session_path %>
          </button>
        <% end %>
      </div>
      <br />
      
      <div class="login-info">
        <%= link_to new_user_registration_path do %>
          <span class="glyphicon glyphicon-envelope" aria-hidden="true">   Continue with Email</span>
        <% end %>
      </div>
    </div>
  </div>
</div>
